<resources>
    <!-- Base application theme. -->
    <style name="Theme.WebView" parent="android:Theme.Material.Light.NoActionBar">
    <!-- Status bar color. -->
    <item name="android:statusBarColor">@color/status_bar_color</item>
    </style>

    <style name="Theme.WebView.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/bg</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/branding</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.WebView</item>
    </style>
</resources>